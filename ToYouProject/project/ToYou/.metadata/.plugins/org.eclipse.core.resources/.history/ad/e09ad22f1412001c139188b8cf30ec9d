server:	       
  port: 8000     # 톰캣 포트
  servlet:
    context-path: /ToYou
    encoding:
      charset: UTF-8
      enabled: true
      force: true
    
-- 스프링 설정 --
spring:
  mvc:
    view:
      prefix: /WEB-INF/views/
      suffix: .jsp
      
  datasource:	#### DB 연동 설정
    driver-class-name: com.mysql.cj.jdbc.Driver
    url: jdbc:mysql://localhost:3306/blog?serverTimezone=Asia/Seoul
    username: root
    password: 1234
    
  jpa:
    open-in-view: true	
    hibernate:
      ddl-auto: update	#### 프로젝트 실행시 @Entity 가 붙은 클래스의 DB 테이블을 생성,수정, 등을 할지 설정
      naming:
        #### @Entity 를 만들때 (테이블생성시) 변수명 그대로 DB 필드 생성해줌
        #### SpringPhysicalNamingStrategy(Default)   디폴트값을 사용하게 되면
        ####   =>  camel case를 underscore 형태로 변경
        physical-strategy: org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl
      use-new-id-generator-mappings: false	#### 기존 jpa 의 넘버링 전략 사용 안함, 
					#### 클래스에서 명시해둔 전략으로 사용함(@GeneratedValue(strategy = GenerationType.IDENTITY))
    show-sql: true	#### true 로 설정해두면 콘솔창에 실행한 쿼리문 보여줌
    properties:
      hibernate.format_sql: true   #### true 로 설정해두면 정렬해서 보여줌 // 원래는 한줄로 보여줌

  jackson:
    serialization:
      fail-on-empty-beans: false

