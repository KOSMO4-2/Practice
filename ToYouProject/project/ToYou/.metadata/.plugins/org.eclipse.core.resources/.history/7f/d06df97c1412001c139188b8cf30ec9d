server:
  port: 8003     # 톰캣 포트
  servlet:
    context-path: /ToYou
    encoding:
      charset: UTF-8
      enabled: true
      force: true
    

spring:
  mvc:
    view:
      prefix: /WEB-INF/views/
      suffix: .jsp
      
  datasource:
    driver-class-name: com.mysql.cj.jdbc.Driver
    url: jdbc:mysql://localhost:3306/blog?serverTimezone=Asia/Seoul
    username: root
    password: 1234
    
  jpa:
    open-in-view: true	
    hibernate:
      ddl-auto: update
      naming:
        #### @Entity 를 만들때 (테이블생성시) 변수명 그대로 DB 필드 생성해줌
        #### SpringPhysicalNamingStrategy(Default)   디폴트값을 사용하게 되면
        ####   =>  camel case를 underscore 형태로 변경
        physical-strategy: org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl
      use-new-id-generator-mappings: false
    show-sql: true
    properties:
      hibernate.format_sql: true

  jackson:
    serialization:
      fail-on-empty-beans: false

